<h1>Listing games</h1>

<table>
  <tr>
    <th>Name</th>
    <th>players</th>
    <th>Duration (min.)</th>
    <th>Genre</th>
    <th>Play style</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
     <td><%= game.min_players%>  <%= "- #{game.max_players}" unless game.min_players== game.max_players %> </td>
    <td><%= game.duration %></td>
    <td><%= game.genre.name  unless game.genre_id.blank? %></td>
    <td><%= game.play_style.name unless game.play_style_id.blank? %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Game', new_game_path %>
