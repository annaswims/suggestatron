<h1>Listing games</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Min players</th>
    <th>Max players</th>
    <th>Duration</th>
    <th>Genre</th>
    <th>Play style</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.name %></td>
    <td><%= game.min_players %></td>
    <td><%= game.max_players %></td>
    <td><%= game.duration %></td>
    <td><%= game.genre_id %></td>
    <td><%= game.play_style_id %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

